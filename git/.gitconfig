[user]
	name = Malik Diarra
	email = malik.diarra@gmail.com

[commit]
	template = ~/.dotfiles/git_commit_msg.txt
	verbose = true

[alias]
	ss = status -s
	cm = commit -m
	co = checkout
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	di = diff
	amend = commit --amend --no-edit
	unstage = reset -q HEAD --
	uncommit = reset --mixed HEAD~
	discard = checkout --
	precommit = diff --cached --diff-algorithm=minimal -w
	branches = branch --sort=-authordate
	tags = tag
	stashes = stash list
	fixup = !git_fixup
	squash = !git_squash
	show-files = !git-show-files
	reapply = !GIT_EDITOR=/usr/bin/true git rebase -i
	undo = reset HEAD^ --
	rename-branch = branch -m
	diff-parent = !git diff $(gt parent 2>/dev/null || git symbolic-ref refs/remotes/origin/HEAD 2>/dev/null | sed \"s@^refs/remotes/origin/@@\" || echo main)

[color]
	ui = always
	status = always
	branch = always
	diff = always
	interactive = always

[core]
	excludesfile = ~/.gitignore
	editor = nvim

[diff]
	mnemonicprefix = true
	tool = vimdiff

[push]
	default = simple

[rebase]
	autoSquash = true
[github]
	user = malikdiarra
[merge]
	conflictstyle = diff3
	tool = nvimdiff
	keepbackup = false
	ff = no
	commit = no
[url "git@github.com:"]
	insteadOf = https://github.com/
	insteadOf = http://www.github.com/
[init]
	defaultBranch = main
[difftool]
	prompt = false
[mergetool]
	keepBackup = false
[grep]
	lineNumber = true
