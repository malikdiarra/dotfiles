[user]
  name = Malik Diarra
  email = malik.diarra@gmail.com

[commit]
  template = ~/.dotfiles/git_commit_msg.txt

[alias]
  ss = status -s
  ci = commit
  cm = commit -m
  co = checkout
  df = diff
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  di = diff
  dc = diff --cached
  amend = commit --amend --no-edit
  unstage = reset -q HEAD --
  uncommit = reset --mixed HEAD~
  discard = checkout --
  precommit = diff --cached --diff-algorithm=minimal -w
  branches = branch -a
  tags = tag
  stashes = stash list
  fixup = !selecta_fixup
  squash = !selecta_squash

[color]
  ui = always
  status = always
  branch = always
  diff = always
  interactive = always

[core]
  excludesfile = ~/.gitignore
  editor = vim

[diff]
  mnemonicprefix = true

[push]
  default = simple

[rebase]
  autoSquash = true
